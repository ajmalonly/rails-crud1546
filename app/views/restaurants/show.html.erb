<div class="container mt-5">
  <div class="card p-3 border" style="background-color: #ffe5e5;">
    <div class="card-body">
      <h2 class="card-title"><%= @restaurant.name %> 🍽️</h2>
      <p class="card-text">📍Location: <%= @restaurant.address %></p>
      <p class="card-text">Ratings: <%= "⭐" * @restaurant.rating %></p>
      <div class="button-group mt-3">
        <%= link_to "Delete",
                    restaurant_path(@restaurant),
                    class: "btn btn-danger mr-2",
                    data: { turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
        <%= link_to "Edit",
                    edit_restaurant_path(@restaurant),
                    class: "btn btn-primary mr-2" %>
        <%= link_to "Back",
                    restaurants_path,
                    class: "btn btn-secondary" %>
      </div>
    </div>
  </div>
</div>
